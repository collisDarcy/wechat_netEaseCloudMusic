.container {
    width: 100%;
    height: 100%;
}

.content {
    position: absolute;
    left: 50%;
    width: 500rpx;
    height: 300rpx;
    margin-top: 93rpx;
    margin-left: -250rpx;
    border-radius: 20rpx;
    border: 2rpx solid #000000;
}

.content text {
    font-size: 40rpx;
    font-weight: 500;
    color: #000000;
}

.middle {
    display: flex;
    justify-content: flex-start;
    margin-top: 30rpx;
}

.middle .iconfont {
    font-size: 55rpx;
    color: #000000;
    margin-left: 10rpx;
}

.content input {
    width: 320rpx;
    height: 60rpx;
    margin: 0 auto;
    margin-left: 30rpx;
    border: 2rpx solid #000000;
    border-radius: 14rpx;
    background-color: transparent;
}

.content button {
    margin-top: 81rpx;
    color:#000000;
    border: 2rpx solid #000000;
    border-radius: 20rpx;
    background-color: transparent;
}