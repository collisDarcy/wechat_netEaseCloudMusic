.container {
    width: 100%;
    height: 100%;
    background-image: linear-gradient(to right,#9933FF,#ffebff);
}

.wrapper {
    position: relative;
    z-index: 90;
    padding-bottom: 40rpx;
}

.left-top-sign {
    font-size: 120rpx;
    color: #f8f8f8;
    position: absolute;
    top: 201rpx;
    left: 50%;
    transform: translateX(-50%);
    text-shadow: 0rpx 0rpx 20rpx #9933FF;
}

.input-content {
    position: absolute;
    width: 500rpx;
    height: 500rpx;
    top: 50%;
    margin-top: 163px;
    left: 50%;
    transform: translate(-50%);
    padding: 0 60rpx;
    border-radius: 20rpx;
    box-shadow: 0 0 20rpx;
}

.input-item {
    display: flex;
    justify-content: flex-start;
    margin-left: -33px;
    width: 470rpx;
    height: 120rpx;
    padding-top: 80rpx;
    border: none;
    border-radius: 20px;

}

.input-item .tit {
    width: 97rpx;
    line-height: 120rpx;
    font-size: 30rpx;
    padding-left: 17rpx;
}

.input-item .iconfont {
    margin-top: 35rpx;
    margin-left: 43rpx;
    font-size: 55rpx;
}

.input-item input {
    width: 230rpx;
    height: 80rpx;
    font-size: 30rpx;
    border: 1px solid #000000;
    padding-left: 18rpx;
    border-radius: 20rpx;
    margin-top: 19rpx;
    margin-left: 15rpx;
}

.confirm-btn {
    position: absolute;
    right: 16rpx;
    bottom: 0;
    font-size: 20rpx;
    width: 192rpx !important;
    height: 123rpx;
    line-height: 100rpx;
    margin-bottom: 101rpx;
    background-color: transparent;
    padding-left: 6rpx;
    color:#000000;
}

.login {
    position: absolute;
    left: 202rpx;
    bottom: 0rpx;
    width: 256rpx !important;
    border-radius: 20rpx;
    background-color: transparent;
    border: 2rpx solid #000000;
    color: #000000;
    border-bottom: 0;
}

.forget-section {
    position: absolute;
    right: 0;
    bottom: 20rpx;
    font-size: 28rpx;
    color: #000000;
}

.register-section {
    position: absolute;
    left: 237rpx;
    bottom: 262rpx;
    width: 100%;
    font-size: 28rpx;
    color: #9933FF;
    text-align: center;

}

.register-section text {
    color: #9933FF;
    margin-left: 10rpx;
}