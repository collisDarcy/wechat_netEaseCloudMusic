/* 搜索内容区域 */
.container .header {
  display: flex;
  padding: 10rpx;
}
.container .header image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 40rpx;
  transform: rotate(0deg);
}
.container .header image:first-child{
    transform:rotate(360deg);
}
.container .header .search {
  border: 2rpx solid #377cd6;
  /*flex-grow: 可拉伸 flex-shrink： 可压缩 flex-basis: 当前元素的宽度*/
  /*flex默认值: flex-grow: 0, flex-shrink: 1, flex-basis: auto*/
  /*flex:1  flex-grow: 1, flex-shrink: 1, flex-basis: 0%*/
  /*flex:auto  flex-grow: 1, flex-shrink: 1, flex-basis: auto*/
  /*flex: 1会导致父元素宽度自动为100%*/
  flex: 1;
  margin: 0 20rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  color: #54abde;
  border-radius: 20rpx;
  box-shadow: 0 0 20rpx yellowgreen;
}

.banner {
  width: 100%;
  height: 300rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

/* 导航区域 */
.navContainer {
  display: flex;
  justify-content: space-evenly;
}

.navContainer .navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10rpx;
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: #9933FF;
  font-size: 50rpx;
  color: #fff;
  margin: 16rpx 0;
}

.navItem text {
  font-size: 28rpx;
}

.recommendContainer {
  padding: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.recommendScroll {
  display: flex;
  height: 350rpx;
}

.scrollItem {
  width: 100rpx;
  margin-right: 100rpx;
  padding-left: 10rpx;
}

.scrollItem image {
  width: 200rpx;
  height: 250rpx;
  border-radius: 10rpx;
}

.scrollItem text {
  font-size: 26rpx;
  width: 200rpx;
  /* 多行文本溢出 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  /*设置对齐模式*/
  -webkit-line-clamp:2;
}
.topList{
  padding-top: 10rpx;
  padding-left: 40rpx;
}
.topListSwiper{
  height: 480rpx;
}
.swiperItem{
  background-color:#fbfbfb;
  margin-top: 40rpx;
  padding-left: 40rpx;
}
.hiddenImg{
  width: 200rpx;
  height: 250rpx;
  border-radius:10rpx;
  margin: 0 auto;
}
.hiddenImg image{
  width: 100%;
  height: 100%;
}
